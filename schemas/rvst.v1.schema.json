{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "datePublished": {
      "type": "string",
      "format": "date"
    },
    "view": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "format": "uri"
        },
        "attr": {
          "type": "object",
          "properties": {
            "class": {
              "type": "object",
              "additionalProperties": {
                "type": "boolean"
              },
              "patternProperties": {
                "^[a-zA-Z]+[a-zA-Z0-9_]*$": {
                  "type": "boolean"
                }
              }
            }
          },
          "additionalProperties": {
            "type": ["string", "boolean"]
          },
          "patternProperties": {
            "^[a-zA-Z]+[a-zA-Z0-9_-]*$": {
              "type": ["string", "boolean"]
            }
          }
        }
      },
      "required": ["name", "attr"]
    }
  },
  "required": ["name", "author", "datePublished", "view"]
}
