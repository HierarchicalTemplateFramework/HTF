{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "view": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "format": "uri" },
                "class": {
                  "type": "object",
                  "additionalProperties": { "type": ["boolean", "string", "object"] },
                  "patternProperties": {
                    "^[a-zA-Z]+[a-zA-Z0-9_]*$": { "type": ["boolean", "string", "object"] }
                  }
                },
                "attr": {
                  "type": "object",
                  "additionalProperties": { "type": ["string", "boolean", "object"] },
                  "patternProperties": {
                    "^[a-zA-Z]+[a-zA-Z0-9_-]*$": { "type": ["string", "boolean", "object"] }
                  }
                }
              },
              "required": ["name", "attr"]
            }
          },
          "required": ["value"]
        }
      ]
    },
    "author": { "type": "string" },
    "datePublished": { "type": "string", "format": "date" },
    "view": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "format": "uri" },
        "class": {
          "type": "object",
          "additionalProperties": { "type": ["boolean", "string", "object"] },
          "patternProperties": {
            "^[a-zA-Z]+[a-zA-Z0-9_]*$": { "type": ["boolean", "string", "object"] }
          }
        },
        "attr": {
          "type": "object",
          "additionalProperties": { "type": ["string", "boolean", "object"] },
          "patternProperties": {
            "^[a-zA-Z]+[a-zA-Z0-9_-]*$": { "type": ["string", "boolean", "object"] }
          }
        }
      },
      "required": ["name", "attr"]
    }
  },
  "required": ["author", "datePublished", "view"]
}
